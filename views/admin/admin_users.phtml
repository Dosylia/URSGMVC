                        <?php if ($this->isAdmin()) : ?>
                        <form method='POST' action='adminBanUser'>
                            <input type='hidden' name='user_id' value='<?= $user['user_id'] ?>'>
                            <button type='submit' class='delete'>Ban</button>
                        </form>
                        <?php endif; ?>
                        <?php if ($this->isModerator()) : ?>
